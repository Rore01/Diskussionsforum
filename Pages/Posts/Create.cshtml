@page
@model Diskussionsforum.Pages.Posts.CreateModel
@{
    ViewData["Title"] = "Skapa inlägg";
}

<h2>Skapa inlägg</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Post.Title"></label>
        <input asp-for="Post.Title" class="form-control" />
        <span asp-validation-for="Post.Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Post.Content"></label>
        <textarea asp-for="Post.Content" class="form-control"></textarea>
        <span asp-validation-for="Post.Content" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Post.ForumCategoryId"></label>
        <select asp-for="Post.ForumCategoryId" class="form-control" asp-items="Model.Categories">
            <option value="">-- Välj kategori --</option>
        </select>
        <span asp-validation-for="Post.ForumCategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Skapa</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
