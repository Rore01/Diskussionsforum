@page "{id:int}"
@model Diskussionsforum.Pages.Posts.DeleteModel
@{
    ViewData["Title"] = "Ta bort inlägg";
}

<h2>Ta bort inlägg</h2>

@if (Model.Post != null)
{
    <div class="alert alert-warning">
        <strong>Är du säker på att du vill ta bort detta inlägg?</strong>
    </div>

    <dl class="row">
        <dt class="col-sm-2">Titel</dt>
        <dd class="col-sm-10">@Model.Post.Title</dd>

        <dt class="col-sm-2">Innehåll</dt>
        <dd class="col-sm-10">@Model.Post.Content</dd>

        <dt class="col-sm-2">Skapad</dt>
        <dd class="col-sm-10">@Model.Post.CreatedAt.ToLocalTime().ToString("g")</dd>
    </dl>

    <form method="post" asp-route-id="@Model.Post.Id">
        <button type="submit" class="btn btn-danger">Ta bort</button>
        <a asp-page="Details" asp-route-id="@Model.Post.Id" class="btn btn-secondary">Avbryt</a>
    </form>
}
else
{
    <p>Inlägget kunde inte hittas.</p>
}
