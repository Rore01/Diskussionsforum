@page
@model Diskussionsforum.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Alla användare";
}

<h2>Användare</h2>

<ul class="list-group">
    @foreach (var user in Model.Users)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>@user.UserName</span>
            <a asp-page="/Messages/Send" asp-route-receiverId="@user.Id" class="btn btn-sm btn-primary">Skicka meddelande</a>
        </li>
    }
</ul>
