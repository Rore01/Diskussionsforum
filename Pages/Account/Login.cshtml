@page
@model Diskussionsforum.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Logga in";
}

<h2>Logga in</h2>

<form method="post">
    <div class="form-group">
        <label for="Input_Email">E-post</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Input_Password">Lösenord</label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" />
        <label asp-for="Input.RememberMe" class="form-check-label">Kom ihåg mig</label>
    </div>
    <button type="submit" class="btn btn-primary">Logga in</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
